<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/ll_create_new_wallet"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_add_blue_a100_24dp"
            android:layout_width="@dimen/ic_add_wallet_size"
            android:layout_height="@dimen/ic_add_wallet_size" />
        <TextView
            android:textColor="@color/blue_300"
            android:text="@string/create_wallet"
            android:textSize="@dimen/normal_text_size1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:id="@+id/ll_import_wallet"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_import_export_blue_100_24dp"
            android:layout_width="@dimen/ic_add_wallet_size"
            android:layout_height="@dimen/ic_add_wallet_size" />
        <TextView

            android:textColor="@color/blue_300"
            android:text="@string/import_wallet"
            android:textSize="@dimen/normal_text_size1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>