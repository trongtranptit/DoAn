<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_3sdp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_toLeftOf="@+id/ll_delete_export_wallet"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_text_size1"
        android:id="@+id/tv_item_wallet_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/ll_delete_export_wallet"
        android:layout_alignParentRight="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_delete_red_900_24dp"
            android:id="@+id/iv_delete_wallet"
            android:layout_width="@dimen/delete_wallet_iv_size"
            android:layout_height="@dimen/delete_wallet_iv_size" />
    </LinearLayout>
</RelativeLayout>